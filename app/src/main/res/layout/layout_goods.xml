<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="90dp" android:orientation="vertical"
    android:background="@color/white">


    <View
        android:id="@+id/view_goods_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_border_light"
        android:visibility="gone"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="货品名称:"
            android:textSize="12sp"
            android:textColor="@color/black_dark"/>

        <EditText
            android:id="@+id/et_item_goods_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请填写货品名称"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货品属性:"
            android:textSize="12sp"
            android:textColor="@color/black_dark"/>

        <EditText
            android:id="@+id/et_item_goods_attribute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请填写货品属性"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="货品描述:"
            android:textSize="12sp"
            android:textColor="@color/black_dark"/>

        <EditText
            android:id="@+id/et_item_goods_describe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请填写描述"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="备注:"
            android:textSize="12sp"
            android:textColor="@color/black_dark"/>

        <EditText
            android:id="@+id/et_item_goods_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请填写备注"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/img_minus"
            android:src="@mipmap/icon_minus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_border_light"/>



</LinearLayout>