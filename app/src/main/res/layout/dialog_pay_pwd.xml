<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:gravity="center|top"              android:orientation="vertical"              android:background="@drawable/only_radius_border"              android:layout_width="match_parent"              android:layout_height="match_parent">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="40dp">        <ImageView            android:src="@mipmap/icon_cancel"            android:id="@+id/tv_img_cross"            android:layout_centerVertical="true"            android:layout_alignParentLeft="true"            android:paddingTop="10dp"            android:paddingBottom="10dp"            android:paddingLeft="15dp"            android:paddingRight="10dp"            android:layout_width="35dp"            android:layout_height="40dp"/>        <TextView            android:text="充值"            android:layout_centerInParent="true"            android:id="@+id/tv_title"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textColor="#333333"            android:textSize="16sp"/>    </RelativeLayout>    <View        android:layout_marginBottom="10dp"        android:layout_width="match_parent"        android:layout_height="0.5dp"        android:background="#dbdbdb"/>    <TextView        android:text="充值"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textColor="#333333"/>    <TextView        android:id="@+id/tv_pay_amount"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textSize="20sp"        android:textColor="#333333"        android:textStyle="bold"/>    <LinearLayout        android:gravity="center"        android:orientation="horizontal"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TextView            android:id="@+id/tv_charge_hint"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textColor="#333333"            android:textSize="12sp"/>        <TextView            android:id="@+id/tv_charge_amount"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textSize="12sp"            android:textColor="#FD6147"/>    </LinearLayout>    <myz.graduation_design.weight.PayPsdInputView        android:layout_margin="30dp"        android:id="@+id/et_pay"        android:inputType="numberDecimal"        android:layout_width="match_parent"        android:layout_height="wrap_content"/></LinearLayout>