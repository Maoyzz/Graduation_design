<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/color_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_send"
        android:elevation="3dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">

                    <TextView
                        android:id="@+id/tv_start_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp"
                        android:text="启运地:"
                        android:textColor="@color/black_dark" />

                    <ImageView
                        android:id="@+id/img_start"
                        android:src="@mipmap/icon_warning"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_start_title"/>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="40dp">

                        <TextView
                            android:id="@+id/tv_startaddress"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:text="请添加启运地"
                            android:textSize="16sp"
                            android:textColor="@color/black_dark"
                            android:gravity="center"
                            android:background="@drawable/bg_goods_send"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_startadress_modify"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="更换"
                                android:textColor="@color/white"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textSize="13sp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/ic_send_modify"/>

                            <TextView
                                android:id="@+id/tv_startadress_del"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="删除"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                android:background="@drawable/ic_send_del"/>

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_border_light"
                    android:layout_marginRight="70dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">

                    <TextView
                        android:id="@+id/tv_end_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp"
                        android:text="目的地:"
                        android:textColor="@color/black_dark" />

                    <ImageView
                        android:id="@+id/img_end"
                        android:src="@mipmap/icon_warning"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_end_title"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="40dp">

                        <TextView
                            android:id="@+id/tv_endaddress"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:text="请添加目的地"
                            android:textSize="16sp"
                            android:textColor="@color/black_dark"
                            android:gravity="center"
                            android:background="@drawable/bg_goods_send"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_endadress_modify"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="更换"
                                android:textColor="@color/white"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:textSize="13sp"
                                android:background="@drawable/ic_send_modify"/>

                            <TextView
                                android:id="@+id/tv_endadress_del"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="删除"
                                android:textColor="@color/white"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textSize="13sp"
                                android:background="@drawable/ic_send_del"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_border_light"
                    android:layout_marginRight="70dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">

                    <TextView
                        android:id="@+id/tv_company_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp"
                        android:text="物流公司:"
                        android:textColor="@color/black_dark" />

                    <ImageView
                        android:id="@+id/img_company"
                        android:src="@mipmap/icon_warning"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_company_title"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="40dp">

                        <TextView
                            android:id="@+id/tv_company"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:text="请添加物流公司"
                            android:textSize="16sp"
                            android:textColor="@color/black_dark"
                            android:gravity="center"
                            android:background="@drawable/bg_goods_send"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_company_modify"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="更换"
                                android:textColor="@color/white"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:textSize="13sp"
                                android:background="@drawable/ic_send_modify"/>

                            <TextView
                                android:id="@+id/tv_company_del"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="删除"
                                android:textColor="@color/white"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textSize="13sp"
                                android:background="@drawable/ic_send_del"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>



            </LinearLayout>
        </ScrollView>




    </LinearLayout>

    <TextView
        android:id="@+id/goods_page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/goods_page1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>